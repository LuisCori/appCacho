<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/uno"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:onClick="vuelta"

        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/and_cacho" />

    <ImageButton
        android:id="@+id/dos"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:onClick="vuelta"

        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/uno"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/and_cacho" />

    <ImageButton
        android:id="@+id/tres"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginTop="48dp"
        android:adjustViewBounds="true"
        android:onClick="vuelta"

        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/dos"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/and_cacho" />

    <ImageButton
        android:id="@+id/cuatro"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:adjustViewBounds="true"
        android:onClick="vuelta"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uno"
        app:layout_constraintVertical_bias="0.577"
        app:srcCompat="@drawable/and_cacho" />

    <ImageButton
        android:id="@+id/cinco"
        android:layout_width="108dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:adjustViewBounds="true"
        android:onClick="vuelta"

        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/cuatro"
        app:layout_constraintTop_toBottomOf="@+id/tres"
        app:layout_constraintVertical_bias="0.574"
        app:srcCompat="@drawable/and_cacho" />

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginBottom="212dp"
        android:onClick="lanzar"
        android:text="@string/btnLanzar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="212dp"
        android:onClick="Nuevo"
        android:text="@string/btnNuevo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="419dp"
        android:layout_height="78dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="100dp"
            android:text="@string/txtNumeros"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/txtnumeros"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#4CAF50"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="417dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="131dp"
            android:layout_height="31dp"
            android:layout_marginStart="52dp"
            android:layout_marginLeft="52dp"
            android:layout_marginBottom="152dp"
            android:text="@string/txtResultado"
            android:textSize="24sp"
            tools:text="@string/txtResultado" />

        <TextView
            android:id="@+id/txtpuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#4CAF50"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>